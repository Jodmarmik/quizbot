{
  "name": "Telegram Quiz Bot",
  "description": "Advanced Telegram Quiz Bot with CSV/TXT support, timers, and leaderboards",
  "repository": "https://github.com/yourusername/telegram-quiz-bot",
  "logo": "https://telegram.org/img/t_logo.png",
  "keywords": [
    "telegram",
    "bot",
    "quiz",
    "pyrogram",
    "mongodb",
    "python"
  ],
  "stack": "container",
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token from @BotFather",
      "required": true
    },
    "API_ID": {
      "description": "Your Telegram API ID from my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API Hash from my.telegram.org",
      "required": true
    },
    "MONGO_URL": {
      "description": "MongoDB connection string (e.g., mongodb+srv://user:pass@cluster.mongodb.net/dbname)",
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": []
}
